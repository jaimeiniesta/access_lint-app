<%= render 'shared/messages' %>
<% if @results.any? %>
<ul class='unstyled'>
  <%- if @results['FAIL'] %>
  <% @results['FAIL'].each do |result| %>
    <li>
      <p class='error message'>
      Failure: <%= result['title'] %><br />
      Severity: <%= result['severity'] %><br />
      </p>
      <ul>
        <% result['element_names'].each do |name| %>
          <li><%= name %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
  <% end %>

  <%- if @results['PASS'] %>
  <% @results['PASS'].each do |result| %>
    <li>
      <p class='success message'>
        Passing: <%= result['title'] %><br />
      </p>
    </li>
  <% end %>
  <% end %>

  <%- if @results['NA'] %>
  <% @results['NA'].each do |result| %>
    <li>
      <p class='info message'>
        Not applicable: <%= result['title'] %><br />
      </p>
    </li>
  <% end %>
  <% end %>
</ul>
<% end %>
