      <% if signed_out? %>
        <%= link_to "Sign in", sign_in_path, class: "sign-in" %>
      <% end %>
      <h1><%= render 'shared/logo_accesslint.svg' %></h1>
      <h2 class="app-tagline">Test Your Siteâ€™s Accessibility</h2>
    </div>
  </header>
  <main class="screen-main" role="main">
    <div class="container">
      <% flash.each do |key, value| %>
        <p class="flash <%= key %>"><%= value %></p>
      <% end %>
      <%= yield %>
    </div>
  </main>
  <%= render 'shared/footer' %>
